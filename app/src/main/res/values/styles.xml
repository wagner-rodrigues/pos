<resources>

    <style name="Widget.Theme.AcaiteriaDaNana.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="mainButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="manager_product_list_item_title">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>

    <style name="manager_product_list_item_icon">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">80dp</item>
    </style>

    <style name="manager_product_list_item_type">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/light_blue_900</item>
    </style>

    <style name="formEdit">
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:layout_marginEnd">20sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">#DDDDDD</item>
    </style>

    <style name="formSpinner" parent="formEdit">
        <item name="android:padding">10dp</item>
    </style>

</resources>